<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*Header*@
    <nav class="navbar navbar-dark bg-dark mb-5 sticky-top">
        @Html.ActionLink("NorthWind Traders", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <div class="navbar-expand mr-auto">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Customers", "Index", "Customer", null, new { @class = "nav-link" })
                </li>
                <li>
                    @Html.ActionLink("Categories", "Index", "Category", null, new { @class = "nav-link" })
                </li>
                <li>
                    @Html.ActionLink("Products", "Index", "Products", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>


        <div class="navbar-expand ml-auto navbar-nav">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="#" target="_blank">
                    <i class="fa fa-2x fa-github"></i>
                </a>
                <a class="nav-item nav-link" href="#" target="_blank">
                    <i class="fa fa-2x fa-twitter"></i>
                </a>
                <a class="nav-item nav-link" href="#" target="_blank">
                    <i class="fa fa-2x fa-medium"></i>
                </a>
                <asp:LoginStatus id="Ls1" runat="server" LoginText="Sign-In" LogoutAction="Redirect"
                                 LogoutText="Sign-Out" OnLoggedOut="Ls1_LoggedOut"
                                 LogoutPageUrl="~/SignOut.aspx" CssClass="btn btn-danger fa fa-sign-in" />
            </div>
        </div>
    </nav>

    <div class="container mb-5">
        @RenderBody()
        
        <hr />
    </div>
    <div class="m-5">&nbsp;</div>
    @*Footer*@
    <nav class="navbar navbar-dark bg-dark mt-5  fixed-bottom">
        <div class="navbar-expand m-auto navbar-text">
            Made with <i class="fa fa-android"></i> by
            <a href="http://www.knowledgeworksindia.com">Knowledge Works India</a>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </div>
    </nav>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>